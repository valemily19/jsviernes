generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      ="file:./dev.db"
}

model marcas{
  id Int @id @default(autoincrement())
  nombre String 
  // llave primaria
  carros carros[]
  }


model carros{
  id Int @id @default(autoincrement())
  modelo String 
  fecha_fabricacion DateTime
  disponible Boolean @default(true)
  precio Decimal
  //atributo clave foranea
  marca_id Int
  // relacion de uno a muchos
  marca marcas @relation(fields: [marca_id], references: [id])

}

model lugar{
  id Int @id @default(autoincrement())
  nombre String 

