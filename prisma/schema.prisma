model empresario {
  id        Int       @id @default(autoincrement())
  nombre    String

  // relaci칩n uno a muchos (un empresario tiene muchas rese침as)
  resenas   resenas[] 
}

model resenas {
  id                   Int       @id @default(autoincrement())
  comentario_resenia String
  Fecha_resenia   DateTime

  // FK y relaci칩n muchos a uno (una rese침a pertenece a un empresario)
  empresario_id        Int
  empresario           empresario @relation(fields: [empresario_id], references: [id])
}

